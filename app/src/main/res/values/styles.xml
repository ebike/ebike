<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="dialog_custom_style" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/custom_dialog_bg</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>


    <!--基本样式-->
    <style name="style_base_f">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="style_base_w">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="white_18" parent="@style/style_base_w">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="white_16" parent="@style/style_base_w">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="white_14" parent="@style/style_base_w">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="black_18" parent="@style/style_base_w">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="black_16" parent="@style/style_base_w">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="black_14" parent="@style/style_base_w">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="orange_16" parent="@style/style_base_w">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/orange_dark</item>
    </style>

    <style name="orange_14" parent="@style/style_base_w">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/orange_dark</item>
    </style>

    <style name="style_base_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/dc_view_line</item>
    </style>

    <style name="PopupWindowAnimation">
        <item name="android:windowEnterAnimation">@anim/popshow_anim</item>
        <item name="android:windowExitAnimation">@anim/pophidden_anim</item>
    </style>
    <style name="AbovePopupWindowAnimation">
        <item name="android:windowEnterAnimation">@anim/above_popshow_anim</item>
        <item name="android:windowExitAnimation">@anim/above_pophidden_anim</item>
    </style>
</resources>
