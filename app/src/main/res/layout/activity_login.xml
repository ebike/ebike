<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_splash"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@mipmap/logo" />

    <ImageView
        android:id="@+id/iv_logo_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:src="@mipmap/logo_txt" />

    <RelativeLayout
        android:id="@+id/rl_userName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_logo_txt"
        android:layout_marginTop="50dp">

        <ImageView
            android:id="@+id/iv_userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/account" />

        <EditText
            android:id="@+id/et_userName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_userName"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@+id/iv_userName"
            android:background="@null"
            android:hint="手机号码/设备编码"
            android:inputType="phone"
            android:textColor="@color/gray_dark"
            android:textColorHint="@color/white"
            android:textSize="16sp" />

    </RelativeLayout>

    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/rl_userName"
        android:layout_marginBottom="9dp"
        android:layout_marginTop="9dp"
        android:background="@color/login_line" />

    <RelativeLayout
        android:id="@+id/rl_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line1"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/iv_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/password" />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_password"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@+id/iv_password"
            android:background="@null"
            android:hint="密码"
            android:inputType="textPassword"
            android:textColor="@color/gray_dark"
            android:textColorHint="@color/white"
            android:textSize="16sp" />

    </RelativeLayout>

    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:layout_below="@id/rl_password"
        android:layout_marginBottom="9dp"
        android:layout_marginTop="9dp"
        android:background="@color/login_line" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line2"
        android:layout_marginTop="50dp"
        android:alpha="0.4"
        android:background="@drawable/login_button"
        android:enabled="false"
        android:text="登录"
        android:textColor="@color/login_text_disabled"
        android:textSize="22sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/tv_register"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingRight="16dp"
            android:text="点击注册"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_forget_password"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="16dp"
            android:text="忘记密码"
            android:textColor="@color/white" />
    </RelativeLayout>

</RelativeLayout>
