<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:minHeight="42dp"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relayout_context"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:clickable="true"
        android:minHeight="55dp"
        android:paddingBottom="6dp"
        android:paddingTop="6dp">

        <ImageView
            android:id="@+id/iv_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:src="@mipmap/navigation" />

        <TextView
            android:id="@+id/formview_intent_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="9dp"
            android:layout_toLeftOf="@+id/iv_arrow"
            android:textColor="@color/color_gray"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/formview_intent_hint"
            android:orientation="vertical">

            <TextView
                android:id="@+id/form_tag_new"
                style="@style/orange_14"
                android:layout_gravity="center_vertical" />

            <TextView
                android:id="@+id/form_text_new"
                style="@style/black_16"
                android:layout_gravity="center_vertical" />

        </LinearLayout>

    </RelativeLayout>

    <View
        android:id="@+id/form_divider"
        style="@style/style_base_line"
        android:layout_marginLeft="16dp"
        android:visibility="gone" />

</LinearLayout>